{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "obsidian"
    ]
  },
  "include": [
    "**/*.ts"
  ]
}