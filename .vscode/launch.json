{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run MCP Server (uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["mcp-server.app:app", "--reload", "--host", "127.0.0.1", "--port", "8001"],
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
