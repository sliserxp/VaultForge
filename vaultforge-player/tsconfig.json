{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "."
  },
  "include": [
    "./*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "dist"
  ]
}

